<!DOCTYPE html>
<html>
<head>
    <title>TreeShop Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="dashboard">
        <div class="dashboard-header">
            <div class="header-content">
                <h1><i class="fas fa-tree"></i> Tree Dashboard</h1>
            </div>
        </div>

        <% if (error) { %>
            <div class="error"><i class="fas fa-exclamation-circle"></i> <%= error %></div>
        <% } %>
        
        <div class="tree-controls">
            <button class="btn btn-primary add-tree-btn" onclick="openAddModal()">
                <i class="fas fa-plus"></i> Add New Tree
            </button>
        </div>

        <div class="tree-grid">
            <% trees.forEach(tree => { %>
                <div class="tree-card">
                    <div class="card-header">
                        <h3><%= tree.treename %></h3>
                        <div class="card-actions">
                            <button onclick="openEditModal('<%= tree._id %>', `<%= encodeURIComponent(tree.treename) %>`, `<%= encodeURIComponent(tree.description) %>`, `<%= encodeURIComponent(tree.image || '') %>`)" class="btn-icon">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button onclick="deleteTree('<%= tree._id %>')" class="btn-icon">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                    <% if(tree.image) { %>
                        <img src="<%= tree.image %>" 
                             alt="<%= tree.treename %>" 
                             class="card-image"
                             onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'card-image placeholder\'><i class=\'fas fa-exclamation-circle\'></i><div>Image failed to load</div></div>';">
                    <% } else { %>
                        <div class="card-image placeholder">
                            <i class="fas fa-tree"></i>
                        </div>
                    <% } %>
                    <div class="card-description">
                        <p title="Click to see full description"><%= tree.description %></p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Add Tree Modal -->
    <div id="addModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Add New Tree</h2>
                <span class="close" onclick="closeAddModal()">&times;</span>
            </div>
            <form id="addTreeForm" action="/add" method="POST" enctype="multipart/form-data" onsubmit="submitAddForm(event)">
                <div class="form-group">
                    <label for="treename">Tree Name</label>
                    <input type="text" id="treename" name="treename" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" required></textarea>
                </div>
                <div class="form-group">
                    <label>Image Upload Options</label>
                    <div class="image-upload-options">
                        <div class="form-group">
                            <label for="imageFile">Upload Image File</label>
                            <div class="file-upload">
                                <input type="file" id="imageFile" name="imageFile" accept="image/*" onchange="previewImage(this)">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="imageUrl">Or Enter Image URL</label>
                            <input type="url" id="imageUrl" name="imageUrl" placeholder="https://example.com/image.jpg" onchange="previewImageUrl(this)">
                        </div>
                        <div id="imagePreview" class="image-preview"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeAddModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="addTreeButton">Add Tree</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Edit Tree Modal -->
    <div id="editModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Edit Tree</h2>
                <span class="close" onclick="closeEditModal()">&times;</span>
            </div>
            <form id="editForm" method="POST" enctype="multipart/form-data" onsubmit="submitEditForm(event)">
                <div class="form-group">
                    <label for="edit-treename">Tree Name</label>
                    <input type="text" id="edit-treename" name="treename" required>
                </div>
                <div class="form-group">
                    <label for="edit-description">Description</label>
                    <textarea id="edit-description" name="description" required></textarea>
                </div>
                <div class="form-group">
                    <label>Image Upload Options</label>
                    <div class="image-upload-options">
                        <div class="form-group">
                            <label for="edit-imageFile">Upload Image File</label>
                            <div class="file-upload">
                                <input type="file" id="edit-imageFile" name="imageFile" accept="image/*" onchange="previewEditImage(this)">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="edit-imageUrl">Or Enter Image URL</label>
                            <input type="url" id="edit-imageUrl" name="imageUrl" placeholder="https://example.com/image.jpg" onchange="previewEditImageUrl(this)">
                        </div>
                        <div id="editImagePreview" class="image-preview"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeEditModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="editTreeButton">Update Tree</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Modal functionality
        function openAddModal() {
            const modal = document.getElementById('addModal');
            modal.classList.add('show');
            // Reset form
            const form = document.getElementById('addTreeForm');
            form.reset();
            document.getElementById('imagePreview').innerHTML = '';
        }

        function closeAddModal() {
            const modal = document.getElementById('addModal');
            modal.classList.remove('show');
            // Reset form
            const form = document.getElementById('addTreeForm');
            form.reset();
            document.getElementById('imagePreview').innerHTML = '';
        }

        function submitAddForm(event) {
            event.preventDefault();
            const form = document.getElementById('addTreeForm');
            const formData = new FormData(form);
            
            // Disable the submit button to prevent double submission
            const submitButton = document.getElementById('addTreeButton');
            submitButton.disabled = true;
            submitButton.innerHTML = 'Adding...';
            
            // Submit the form
            form.submit();
        }

        function openEditModal(id, name, description, image) {
            const modal = document.getElementById('editModal');
            const form = document.getElementById('editForm');
            form.action = '/update/' + id;
            
            // Reset form and enable submit button
            form.reset();
            const submitButton = document.getElementById('editTreeButton');
            submitButton.disabled = false;
            submitButton.innerHTML = 'Update Tree';
            
            // Set values
            document.getElementById('edit-treename').value = decodeURIComponent(name);
            document.getElementById('edit-description').value = decodeURIComponent(description);
            
            // Show current image and set URL
            const preview = document.getElementById('editImagePreview');
            preview.innerHTML = ''; // Clear previous preview
            if (image && image !== 'undefined') {
                const decodedImage = decodeURIComponent(image);
                const img = document.createElement('img');
                img.src = decodedImage;
                img.alt = 'Current image';
                preview.appendChild(img);
                
                // Set the image URL if it's an external URL
                const imageUrlInput = document.getElementById('edit-imageUrl');
                if (decodedImage.startsWith('http://') || decodedImage.startsWith('https://')) {
                    imageUrlInput.value = decodedImage;
                }
            } else {
                preview.innerHTML = '<i class="fas fa-image" style="font-size: 2rem; color: #cbd5e1;"></i>';
            }
            
            modal.classList.add('show');
        }

        function closeEditModal() {
            const modal = document.getElementById('editModal');
            modal.classList.remove('show');
            // Reset form
            const form = document.getElementById('editForm');
            form.reset();
            document.getElementById('editImagePreview').innerHTML = '';
        }

        function submitEditForm(event) {
            event.preventDefault();
            const form = document.getElementById('editForm');
            const submitButton = document.getElementById('editTreeButton');
            
            // Validate form
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            
            // Disable submit button and show loading state
            submitButton.disabled = true;
            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Updating...';
            
            // Submit form
            form.submit();
        }

        function deleteTree(id) {
            if (confirm('Are you sure you want to delete this tree?')) {
                window.location.href = '/delete/' + id;
            }
        }

        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            preview.innerHTML = ''; // Clear previous preview
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.alt = 'Preview';
                    preview.appendChild(img);
                }
                reader.readAsDataURL(input.files[0]);
            } else {
                preview.innerHTML = '<i class="fas fa-image" style="font-size: 2rem; color: #cbd5e1;"></i>';
            }
        }

        function previewEditImage(input) {
            const preview = document.getElementById('editImagePreview');
            preview.innerHTML = ''; // Clear previous preview
            document.getElementById('edit-imageUrl').value = ''; // Clear URL input
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.alt = 'Preview';
                    preview.appendChild(img);
                }
                reader.readAsDataURL(input.files[0]);
            } else {
                preview.innerHTML = '<i class="fas fa-image" style="font-size: 2rem; color: #cbd5e1;"></i>';
            }
        }

        function previewImageUrl(input) {
            const preview = document.getElementById('imagePreview');
            preview.innerHTML = ''; // Clear previous preview
            document.getElementById('imageFile').value = ''; // Clear file input
            
            if (input.value) {
                const img = document.createElement('img');
                img.src = input.value;
                img.alt = 'Preview';
                img.onerror = function() {
                    preview.innerHTML = '<i class="fas fa-exclamation-circle"></i> Invalid image URL';
                };
                preview.appendChild(img);
            } else {
                preview.innerHTML = '<i class="fas fa-image" style="font-size: 2rem; color: #cbd5e1;"></i>';
            }
        }

        function previewEditImageUrl(input) {
            const preview = document.getElementById('editImagePreview');
            preview.innerHTML = ''; // Clear previous preview
            document.getElementById('edit-imageFile').value = ''; // Clear file input
            
            if (input.value) {
                const img = document.createElement('img');
                img.src = input.value;
                img.alt = 'Preview';
                img.onerror = function() {
                    preview.innerHTML = '<i class="fas fa-exclamation-circle"></i> Invalid image URL';
                };
                preview.appendChild(img);
            } else {
                preview.innerHTML = '<i class="fas fa-image" style="font-size: 2rem; color: #cbd5e1;"></i>';
            }
        }

        // Close modals when clicking outside
        window.onclick = function(event) {
            const addModal = document.getElementById('addModal');
            const editModal = document.getElementById('editModal');
            if (event.target == addModal) {
                closeAddModal();
            }
            if (event.target == editModal) {
                closeEditModal();
            }
        }

        // Thêm sự kiện ngăn chặn form submit mặc định khi nhấn Enter
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && e.target.tagName !== 'TEXTAREA') {
                    e.preventDefault();
                }
            });
        });
    </script>

    <%- include('../partials/footer') %>
</body>
</html>
